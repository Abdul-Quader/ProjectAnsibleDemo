---
- name: Installing Tomcat Server
  hosts: all
  become: true
  vars:
    tomcat_url: https://mirrors.estointernet.in/apache/tomcat/tomcat-10/v10.0.4/bin/apache-tomcat- 10.0.4.tar.gz
    tomcat_package: apache-tomcat- 10.0.4.tar.gz

- tasks:
  - name: Install java
    yum:
      name: java
      state: latest

  - name: Download Tomcat package
    get_url:
      url: "{{ tomcat_url }}"
      dest: /usr/local

  - name: Extract package
    unarchive:
      src: /usr/local/{{ tomcat_package }}
      dest: /usr/local
      remote_src: yes

  - name: start tomcat services
    shell: nohup /usr/local/{{ tomcat_package }}/bin/startup.sh
